<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/berlinetta_background_portrait" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/CarImageViewTop"
        android:layout_marginTop="15dp"
        android:text="F12 Berlinetta"
        android:textColor="@color/text_color"
        android:textSize="@dimen/F12Berlineta_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Take it for a spin"
        android:textColor="@color/text_color"
        android:textSize="@dimen/CarImageViewTop"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:src="@drawable/spin_arrow_portrait" />
    </FrameLayout>

    <ImageView
        android:id="@+id/blackCarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:src="@drawable/black_colour" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/blackCarBtn"
        
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Rosso Scuderia"
        android:textColor="@color/text_color"
        android:textSize="@dimen/CarImageViewTop"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/redCarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignTop="@+id/blackCarBtn"
        android:src="@drawable/red_colour" />

    <ImageView
        android:id="@+id/grayCarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/blackCarBtn"
        android:src="@drawable/silver_colour" />

   <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footer_bg"
            android:orientation="vertical" >

            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp" >

                <ImageView
                    android:id="@+id/bell_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bell_button" />
            </FrameLayout>
        </LinearLayout>
</RelativeLayout>